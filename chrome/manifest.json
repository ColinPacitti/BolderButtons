{
  "manifest_version": 2,

  "name": "BolderButtons",
  "description": "Bind any webpage button to a button on your Pebble",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Bold a Button"
  },
  
  "background": {
     "scripts": ["bold.js"],
      "persistent": true
  },
  "permissions": [
    "activeTab"
  ]
}
